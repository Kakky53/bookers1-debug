 <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="box">
    <h4>Title</h4>
      <%= f.text_field :title %>
  </div>
  <div class="box">
    <h4>Body</h4>
      <%= f.text_area :body %>
  </div>  
  <div class="box">
    <%= f.submit 'Update Book' %>
  </div>
 <% end %>

